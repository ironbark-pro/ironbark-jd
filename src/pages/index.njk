<div style="text-align:center; max-width:800px; margin:0 auto 60px;">
    <h1 style="font-size:32px; font-weight:500; color:#FFFFFF; margin-bottom:20px; letter-spacing:0.5px;">Open Positions</h1>
    <p style="font-size:22px; line-height:1.5; color:rgba(255,255,255,0.8); letter-spacing:0.3px; max-width:700px; margin:0 auto;">Stay ahead of the market: explore new opportunities with our clients long before they appear publicly.</p>
</div>
<div class="jobs-list">
    {% for job in collections.jobs | reverse %}
    <div class="job-card" onclick="window.location.href='/{{ job.url }}'">
        <h2>{{ job.data.title }}</h2>
        
        <div class="job-meta">
            {% if job.data.location %}
            <span>üìç {{ job.data.location }}</span>
            {% endif %}
        </div>
        
        {% if job.data.company %}
        <p>{{ job.data.company }}</p>
        {% endif %}
        
        <a href="/{{ job.url }}" class="job-link" onclick="event.stopPropagation()">View Details & Apply ‚Üí</a>
    </div>
    {% endfor %}
</div>

{% if collections.jobs.length == 0 %}
<p>No open positions at the moment. Check back soon!</p>
{% endif %}
